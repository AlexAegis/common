{
	"name": "@alexaegis/workspace",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.0.24",
	"license": "mit",
	"private": true,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "Alex Aegis",
		"url": "https://github.com/AlexAegis"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexAegis/js"
	},
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/js/issues"
	},
	"keywords": [
		"eslint",
		"javascript",
		"js",
		"ts",
		"tsconfig",
		"turbo",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=18.13.0"
	},
	"packageManager": "pnpm@7.29.3",
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build-lib_ build-app_",
		"build-lib": "turbo run build-lib_",
		"lint": "turbo run lint_",
		"lint:depcheck": "turbo run lint:depcheck --concurrency 6",
		"lint:es": "turbo run lint:es_ --concurrency 6",
		"lint:format": "turbo run lint:format_ --concurrency 6",
		"lint:format_": "prettier --check *.{json,ts,js,mjs,md,yml,yaml}",
		"lint:md": "turbo run lint:md --concurrency 6",
		"lint:md:workspace": "markdownlint --ignore-path '.gitignore' --ignore CHANGELOG.md *.md",
		"lint:remark": "turbo run lint:remark --concurrency 6",
		"lint:remark:workspace": "remark --frail --quiet --no-stdout packages/**/*.md readme.md",
		"lint:style": "turbo run lint:style --concurrency 6",
		"lint:svelte": "turbo run lint:svelte --concurrency 6",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6",
		"ce": "turbo run ce_",
		"ci": "pnpm lint && pnpm build && pnpm test && pnpm posttest && pnpm typedoc",
		"format": "prettier --write .",
		"merge-coverage": "merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"ncu": "ncu --deep --peer --upgrade",
		"nuke": "nuke",
		"postinstall": "husky install",
		"posttest": "turbo run build --filter @alexaegis/coverage-tools && merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"release": "commit-and-tag-version --sign",
		"release:major": "commit-and-tag-version --sign --release-as major",
		"release:minor": "commit-and-tag-version --sign --release-as minor",
		"release:patch": "commit-and-tag-version --sign --release-as patch",
		"setup-all": "npx setup-prettier && npx setup-editorconfig && npx setup-husky && npx setup-git && npx setup-commitlint && npx setup-eslint && npx setup-github && npx setup-ts && npx setup-remark && npx setup-standard-version && npx setup-stylelint && npx setup-turbo && npx setup-vite && npx setup-vitest && npx setup-workspace",
		"start": "turbo run start --parallel",
		"test": "turbo run test_ --concurrency 6",
		"typedoc": "turbo run typedoc"
	},
	"dependencies": {
		"typedoc-plugin-missing-exports": "^1.0.0"
	},
	"devDependencies": {
		"@alexaegis/coverage-tools": "0.0.24",
		"@alexaegis/eslint-config-core": "0.0.3",
		"@alexaegis/nuke": "0.0.3",
		"@alexaegis/setup-commitlint": "0.0.3",
		"@alexaegis/setup-editorconfig": "0.0.3",
		"@alexaegis/setup-eslint": "0.0.3",
		"@alexaegis/setup-git": "0.0.3",
		"@alexaegis/setup-github": "0.0.3",
		"@alexaegis/setup-husky": "0.0.3",
		"@alexaegis/setup-prettier": "0.0.3",
		"@alexaegis/setup-standard-version": "0.0.3",
		"@alexaegis/setup-stylelint": "0.0.3",
		"@alexaegis/setup-ts": "0.0.3",
		"@alexaegis/setup-turbo": "0.0.3",
		"@alexaegis/setup-vite": "0.0.3",
		"@alexaegis/setup-vitest": "0.0.3",
		"@alexaegis/setup-vscode": "0.0.3",
		"@alexaegis/setup-workspace": "0.0.3",
		"@alexaegis/stylelint-config": "0.0.3",
		"@alexaegis/ts": "0.0.3",
		"@lcov-viewer/cli": "^1.3.0",
		"@types/eslint": "^8.37.0",
		"@types/node": "^18.15.11",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"@vitest/coverage-c8": "^0.29.8",
		"commit-and-tag-version": "^11.2.0",
		"commitlint": "^17.5.1",
		"depcheck": "^1.4.3",
		"eslint": "^8.37.0",
		"eslint-config-next": "^13.2.4",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-turbo": "^1.8.8",
		"eslint-plugin-unicorn": "^46.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.0",
		"markdownlint-cli": "^0.33.0",
		"npm-check-updates": "^16.10.1",
		"prettier": "^2.8.7",
		"remark-cli": "^11.0.0",
		"remark-lint": "^9.1.1",
		"remark-lint-list-item-indent": "3.1.1",
		"remark-lint-maximum-line-length": "^3.1.2",
		"remark-preset-lint-consistent": "^5.1.1",
		"remark-preset-lint-recommended": "^6.1.2",
		"standard-version": "^9.5.0",
		"ts-node": "^10.9.1",
		"turbo": "^1.8.8",
		"typedoc": "^0.23.28",
		"typescript": "5.0.3",
		"vitest": "^0.29.8"
	}
}
