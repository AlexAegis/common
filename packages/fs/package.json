{
	"name": "@alexaegis/fs",
	"description": "Filesystem tools",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "AlexAegis",
		"url": "https://www.github.com/AlexAegis"
	},
	"homepage": "https://www.github.com/AlexAegis/js-core#readme",
	"repository": "github:AlexAegis/js-core",
	"bugs": {
		"url": "https://www.github.com/AlexAegis/js-core/issues"
	},
	"keywords": [
		"fs",
		"javascript",
		"js",
		"ts",
		"typescript"
	],
	"type": "module",
	"sideEffects": false,
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"optionalDependencies": {
		"prettier": "^2.8.3"
	},
	"scripts": {
		"build": "vite build",
		"lint:es": "eslint --max-warnings=0 --fix .",
		"lint:format": "prettier --check .",
		"test": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage",
		"typedoc": "typedoc ./src/index.ts --out ./dist/typedoc"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@alexaegis/common": "^0.0.1",
		"globby": "^13.1.3",
		"js-yaml": "^4.1.0",
		"kolorist": "^1.6.0",
		"yargs": "^17.6.2"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^18.11.18",
		"@types/prettier": "^2.7.2",
		"@types/yargs": "^17.0.20",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vite-plugin-autolib": "^0.0.6",
		"vite-plugin-dts": "^1.7.1"
	}
}
