{
	"name": "@alexaegis/fs",
	"description": "Filesystem tools",
	"version": "0.3.1",
	"license": "MIT",
	"private": false,
	"archetype": {
		"platform": "node",
		"language": "ts",
		"kind": "lib"
	},
	"keywords": [
		"fs",
		"javascript",
		"js",
		"managed-by-autotool",
		"ts",
		"typescript"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"lint:format_": "prettier --no-plugin-search --cache-location .cache/prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"lint:md_": "remark --frail --no-stdout --silently-ignore .",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"lint:tsc_": "tsc --noEmit",
		"publint": "turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"publint_": "publint dist",
		"all": "turbo run all_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"format": "turbo run format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"format_": "prettier --no-plugin-search --cache-location .cache/prettier --write .",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/fs",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage",
		"typedoc": "typedoc ./src/index.ts --excludeExternals --externalPattern '**/node_modules/**' --out ./dist/typedoc"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./mocks": {
			"types": "./src/mocks.ts",
			"import": "./dist/mocks.js",
			"require": "./dist/mocks.cjs",
			"default": "./dist/mocks.js"
		},
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@alexaegis/common": "^0.3.1",
		"@alexaegis/logging": "^0.3.1",
		"js-yaml": "^4.1.0"
	},
	"optionalDependencies": {
		"prettier": "^2.8.8"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.3.3",
		"@alexaegis/ts": "^0.3.3",
		"@alexaegis/vite": "^0.3.3",
		"@alexaegis/vitest": "^0.3.3",
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^20.3.3",
		"@types/prettier": "^2.7.3",
		"publint": "^0.1.13",
		"typescript": "^5.1.6",
		"vite": "^4.3.9",
		"vitest": "^0.32.2"
	}
}
