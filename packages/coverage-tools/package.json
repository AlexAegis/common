{
	"name": "@alexaegis/coverage-tools",
	"description": "Tools for working with coverage reports in workspaces",
	"version": "0.0.24",
	"license": "MIT",
	"private": false,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "AlexAegis",
		"url": "https://www.github.com/AlexAegis"
	},
	"homepage": "https://www.github.com/AlexAegis/vite-plugin-autolib#readme",
	"repository": "github:AlexAegis/vite-plugin-autolib",
	"bugs": {
		"url": "https://www.github.com/AlexAegis/vite-plugin-autolib/issues"
	},
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"javascript",
		"js",
		"ts",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/coverage-tools",
		"build-lib_": "vite build",
		"lint:depcheck": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/coverage-tools",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/coverage-tools",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/coverage-tools",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/coverage-tools",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/coverage-tools",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"bin": {
		"merge-workspace-lcov-reports": "./shims/merge-workspace-lcov-reports.js"
	},
	"dependencies": {
		"@alexaegis/common": "*",
		"@alexaegis/logging": "*",
		"@alexaegis/workspace-tools": "*",
		"globby": "^13.1.3"
	},
	"devDependencies": {
		"@alexaegis/ts": "0.0.5",
		"@alexaegis/vite": "0.0.5",
		"@alexaegis/vitest": "0.0.5",
		"@types/node": "^18.15.11",
		"@vitest/coverage-c8": "^0.29.8",
		"typescript": "^5.0.3",
		"vite": "4.2.1",
		"vite-plugin-autolib": "^0.0.14",
		"vite-plugin-dts": "^2.2.0",
		"vitest": "^0.29.8"
	}
}
