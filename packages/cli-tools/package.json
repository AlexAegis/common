{
	"name": "@alexaegis/cli-tools",
	"description": "Common yargs setup",
	"version": "0.1.1",
	"license": "MIT",
	"private": false,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "AlexAegis",
		"url": "https://www.github.com/AlexAegis"
	},
	"homepage": "https://www.github.com/AlexAegis/js-core#readme",
	"repository": "github:AlexAegis/js-core",
	"bugs": {
		"url": "https://www.github.com/AlexAegis/js-core/issues"
	},
	"keywords": [
		"@alexaegis/setup-depcheck",
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"fs",
		"javascript",
		"js",
		"ts",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/cli-tools",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/cli-tools",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/cli-tools",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/cli-tools",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/cli-tools",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/cli-tools",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/cli-tools",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run",
		"typedoc": "typedoc ./src/index.ts --excludeExternals --externalPattern '**/node_modules/**' --out ./dist/typedoc"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@alexaegis/common": "*",
		"@alexaegis/fs": "*",
		"@alexaegis/logging": "*",
		"@alexaegis/workspace-tools": "*",
		"yargs": "^17.7.1"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.1.2",
		"@alexaegis/ts": "^0.1.2",
		"@alexaegis/vite": "^0.1.2",
		"@alexaegis/vitest": "^0.1.2",
		"@types/node": "^18.15.11",
		"@types/yargs": "17.0.24",
		"typescript": "^5.0.4",
		"vite": "^4.2.1",
		"vitest": "^0.29.8"
	}
}
