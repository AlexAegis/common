{
	"name": "@alexaegis/workspace-tools",
	"description": "Tools for working with javascript workspaces",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "AlexAegis",
		"url": "https://www.github.com/AlexAegis"
	},
	"homepage": "https://www.github.com/AlexAegis/vite-plugin-autolib#readme",
	"repository": "github:AlexAegis/vite-plugin-autolib",
	"bugs": {
		"url": "https://www.github.com/AlexAegis/vite-plugin-autolib/issues"
	},
	"keywords": [
		"javascript",
		"js",
		"ts",
		"typescript"
	],
	"type": "module",
	"sideEffects": false,
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "vite build",
		"lint:es": "eslint --max-warnings=0 --fix .",
		"lint:format": "prettier --check .",
		"test": "vitest --passWithNoTests --coverage --run",
		"typedoc": "typedoc ./src/index.ts --out ./typedoc"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@npmcli/package-json": "^3.0.0",
		"globby": "^13.1.3",
		"kolorist": "^1.6.0",
		"prettier": "^2.8.3",
		"yargs": "^17.6.2"
	},
	"devDependencies": {
		"@schemastore/package": "^0.0.6",
		"@types/fs-extra": "^11.0.1",
		"@types/node": "^18.11.18",
		"@types/prettier": "^2.7.2",
		"@types/yargs": "^17.0.20",
		"@vitest/coverage-istanbul": "^0.27.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vite-plugin-autolib": "^0.0.4",
		"vite-plugin-dts": "^1.7.1",
		"vite-plugin-static-copy": "^0.13.0"
	}
}
