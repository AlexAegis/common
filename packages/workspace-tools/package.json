{
	"name": "@alexaegis/workspace-tools",
	"description": "Tools for working with javascript workspaces",
	"version": "0.2.0",
	"license": "MIT",
	"private": false,
	"archetype": {
		"platform": "node",
		"language": "ts",
		"kind": "lib"
	},
	"keywords": [
		"javascript",
		"js",
		"managed-by-autotool",
		"ts",
		"typescript"
	],
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "AlexAegis",
		"url": "https://www.github.com/AlexAegis"
	},
	"homepage": "https://www.github.com/AlexAegis/vite-plugin-autolib#readme",
	"repository": "github:AlexAegis/vite-plugin-autolib",
	"bugs": {
		"url": "https://www.github.com/AlexAegis/vite-plugin-autolib/issues"
	},
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/workspace-tools",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/workspace-tools",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/workspace-tools",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/workspace-tools",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/workspace-tools",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/workspace-tools",
		"lint:tsc_": "tsc --noEmit",
		"publint": "turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/workspace-tools",
		"publint_": "publint dist",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/workspace-tools",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage",
		"turbo:test": "turbo --color --filter @alexaegis/workspace-tools test",
		"typedoc": "typedoc ./src/index.ts --excludeExternals --externalPattern '**/node_modules/**' --out ./dist/typedoc"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@alexaegis/common": "^0.2.0",
		"@alexaegis/fs": "^0.2.0",
		"@alexaegis/logging": "^0.2.0",
		"@alexaegis/match": "^0.2.0",
		"@schemastore/package": "^0.0.8",
		"globby": "^13.1.4",
		"prettier": "^2.8.8",
		"semver": "^7.5.1"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.3.0",
		"@alexaegis/ts": "^0.3.0",
		"@alexaegis/vite": "^0.3.0",
		"@alexaegis/vitest": "^0.3.0",
		"@types/node": "^20.2.1",
		"@types/semver": "^7.5.0",
		"publint": "^0.1.12",
		"typescript": "^5.0.4",
		"vite": "^4.3.8",
		"vitest": "^0.31.1"
	}
}
